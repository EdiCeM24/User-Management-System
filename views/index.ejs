<div class="mainPage d-flex justify-content-between flex-wrap flex-md nowrap align-items-center -pt-2 pb-2 mb-3 border-bottom">
    <h1 class="h-2">Dashboard</h1>

    <div class="btn-toolbar mb-2 mb-md 0">
       <div class="btn-group mb-2 p-3">
          <a href="/add" class="btn btn-sm btn-outline-secondary">+ New User</a>
       </div> 
    </div>
</div>


<% messages.forEach(element => { %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
       <%= element %> 
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"><i class="bi bi-x-lg"></i></button>
   </div>
<% }) %>

<div class="table-responsive">
   <table class="table table-striped table-sm">
      <thead>
         <tr>
            <!-- <th scope="col">ID</th> -->
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Email</th>
            <th scope="col">Telephone</th>
            <th scope="col">Message</th>
            <th scope="col">City</th>
            <th scope="col">State</th>
            <th scope="col">Zipcode</th>
            <th scope="col">Country</th>
            <th scope="col" class="text-end">Actions</th>
         </tr>
      </thead>
      <tbody>
         <% customers.forEach(user => { %>
            <tr class="align-middle">
               <td><%= user.firstName %></td>
               <td><%= user.lastName %></td>
               <td><%= user.email %></td>
               <td><%= user.tel %></td>
               <td><%= user.message %></td>
               <td><%= user.city %></td>
               <td><%= user.state %></td>
               <td><%= user.zipCode %></td>
               <td><%= user.country %></td>
               <td class="text-end d-flex flex-row justify-content-end gap-2">
                  <a href="/view/<%= user._id %>" class="btn btn-sm btn-outline-primary"><i class="bi bi-eye" title="View"></i></a>
                  <a href="/edit/<%= user._id %>" class="btn btn-sm btn-outline-warning"><i class="bi bi-pencil" title="Edit"></i></a>

                  <form action="/edit/<%= user._id %>?_method=DELETE" class="d-inline position-relative" method="post">
                      <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete"><i class="bi bi-trash3"></i></button>
                  </form>
               </td>
            </tr>
         <% }) %>
      </tbody>
   </table>
</div>


<% if (customers.length > 0) { %>
   <nav aria-label="Dashboard pagination">
      <ul class="pagination justify-content-center mt-5">

          <% if (currentPage == 1) { %>
              <li class="page-item disabled"><a href="#" class="page-link"><i class="bi bi-chevron-left"></i> First</a></li>
          <%} else {%> 
              <li class="page-item"><a href="/?page=1" class="page-link"><i class="bi bi-chevron-left"></i> First</a></li>
          <% } %>   

          <% var i = (Number(currentPage) > 5 ? Number(currentPage) - 4 : 1) %>
          <% if (i !== 1) { %>
              <li class="page-item disabled"><a href="#" class="page-link">...</a></li>
          <% } %>  

           <% for(; i <= (Number(currentPage) + 4) && i <= totalPages; i++) { %>
               <% if (i == currentPage) { %>
                 <li class="page-item disabled"><a href="#" class="page-link"><%= i %></a></li>
               <% } else { %>
                 <li class="page-item"><a href="/?page=<%= i %>" class="page-link"><% i %></a></li>
               <%}%>
               <% if (i == Number(currentPage) + 4 && i < totalPages) { %>
                  <li class="page-item disabled"><a href="#" class="page-link">...</a></li>
               <% } %>
           <% } %>

          <% if (currentPage == totalPages) { %>
              <li class="page-item disabled"><a href="#" class="page-link">Last <i class="bi bi-chevron-right"></i></a></li>
          <%} else {%> 
              <li class="page-item"><a href="/?page=<%= totalPages %>" class="page-link">Last <i class="bi bi-chevron-right"></i></a></li>
          <% } %>


      </ul>
   </nav>
